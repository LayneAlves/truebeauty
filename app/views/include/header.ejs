<!-- js sacola -->


<script>
const btnAbrirSacola = document.querySelector('.cart-icon'); // botão do carrinho
const sacola = document.getElementById('sacola-lateral');
const overlaySacola = document.getElementById('overlay-sacola');
const btnFecharSacola = document.getElementById('fechar-sacola');

function abrirSacola() {
  sacola.classList.add('aberta');
  overlaySacola.classList.add('ativo');
}

function fecharSacola() {
  sacola.classList.remove('aberta');
  overlaySacola.classList.remove('ativo');
}

btnAbrirSacola.addEventListener('click', abrirSacola);
btnFecharSacola.addEventListener('click', fecharSacola);
overlaySacola.addEventListener('click', fecharSacola);

// Botão Excluir remove o item
document.querySelector('.btn-excluir').addEventListener('click', () => {
  const item = document.querySelector('.item-sacola');
  item.remove();
});

</script>

<!-- Fim js sacola -->


