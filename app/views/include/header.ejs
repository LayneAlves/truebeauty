<div id="overlay" class="overlay"></div>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const sideMenu = document.getElementById('side-menu');
  const overlay = document.getElementById('overlay');

  menuToggle.addEventListener('click', () => {
    sideMenu.classList.toggle('open');
    overlay.classList.toggle('active');
  });

  overlay.addEventListener('click', () => {
    sideMenu.classList.remove('open');
    overlay.classList.remove('active');
  });

// Barra de pesquisa
const searchIcon = document.querySelector('.search-icon');
const cartIcon = document.querySelector('.cart-icon');
const input = searchIcon.querySelector('input');

searchIcon.addEventListener('mouseenter', () => {
  input.style.width = '200px';
  input.style.opacity = '1';
  input.style.padding = '0 8px';
  cartIcon.style.marginLeft = '48px';
  cartIcon.style.transition = 'margin-left 0.3s ease';
});

searchIcon.addEventListener('mouseleave', () => {
  // Só fecha se o input não estiver focado (para evitar fechar enquanto digita)
  if (document.activeElement !== input) {
    input.style.width = '0';
    input.style.opacity = '0';
    input.style.padding = '0';
    cartIcon.style.marginLeft = '16px';
  }
});

// Fechar a barra quando o input perde o foco
input.addEventListener('blur', () => {
  input.style.width = '0';
  input.style.opacity = '0';
  input.style.padding = '0';
  cartIcon.style.marginLeft = '16px';
});


// Fim da barra
</script>